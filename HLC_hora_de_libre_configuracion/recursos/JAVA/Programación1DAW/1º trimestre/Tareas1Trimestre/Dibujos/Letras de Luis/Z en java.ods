public class ImprimirLetraZ {
    public static void main(String[] args) {
        int altura = 7; // Altura predeterminada de la letra "Z"
        imprimirLetraZ(altura);
    }

    public static void imprimirLetraZ(int altura) {
        for (int i = 0; i < altura; i++) {
            for (int j = 0; j < altura; j++) {
                if (i == 0 || i == altura - 1 || j == altura - i - 1) {
                    System.out.print("*");
                } else {
                    System.out.print(" ");
                }
            }
            System.out.println();
        }
    }
}